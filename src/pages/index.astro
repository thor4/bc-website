---
import MainLayout from '../layouts/MainLayout.astro';
import Button from '../components/Button.astro';

// Latest talk info
const latestTalk = {
  title: "From Soloist to Symphony: Orchestrating Multi-Agent AI Systems",
  date: "June 18, 2025",
  description: "Exploring how to build and orchestrate multi-agent AI systems that work together to solve complex problems.",
  slidesPath: "/presentation-from_soloist_to_symphony.pdf",
  photos: [
    "/20250619_1_iOS.jpg",
    "/20250619_2_iOS.jpg", 
    "/20250619_3_iOS.jpg",
    "/20250619_4_iOS.jpg",
    "/20250619_5_iOS.jpg"
  ]
};
---

<MainLayout 
  title="Home"
  description="Bryan Conklin: Exploring the future of AI through multi-agent systems and computational neuroscience. Gen AI Specialist at AWS."
>
  <!-- Hero Section - Simplified -->
  <section class="py-32 px-4 sm:px-6 lg:px-8">
    <div class="max-w-4xl mx-auto text-center">
      <h1 class="text-5xl font-bold text-[var(--color-text-primary)] mb-6">
        Bryan Conklin
      </h1>
      
      <p class="text-2xl text-[var(--color-accent)] mb-8">
        Gen AI Specialist @ AWS
      </p>

      <p class="text-xl text-[var(--color-text-secondary)] mb-12 max-w-2xl mx-auto" style="text-align: center;">
        Exploring the future of AI through multi-agent systems and computational neuroscience
      </p>
    </div>
  </section>

  <!-- Latest Talk Section -->
  <section class="py-20 px-4 sm:px-6 lg:px-8 bg-[var(--color-bg-secondary)]">
    <div class="max-w-4xl mx-auto">
      <div class="text-center mb-12">
        <h2 class="text-3xl font-bold text-[var(--color-text-primary)] mb-4">Latest Talk</h2>
        <p class="text-[var(--color-text-secondary)]">{latestTalk.date}</p>
      </div>

      <div class="bg-[var(--color-bg-primary)] rounded-lg p-8 border border-[var(--color-border)]">
        <h3 class="text-2xl font-semibold text-[var(--color-text-primary)] mb-4">
          {latestTalk.title}
        </h3>
        
        <p class="text-[var(--color-text-secondary)] mb-6">
          {latestTalk.description}
        </p>

        <div class="flex flex-wrap gap-4 mb-8">
          <Button variant="primary" href={latestTalk.slidesPath} target="_blank">
            Download Slides (PDF)
          </Button>
          
          <div class="flex gap-2">
            <a 
              href={`https://twitter.com/intent/tweet?text=${encodeURIComponent(`Check out my latest talk: "${latestTalk.title}" - exploring multi-agent AI systems`)}&url=${encodeURIComponent('https://bryanconklin.com')}`}
              target="_blank"
              rel="noopener noreferrer"
              class="inline-flex items-center px-4 py-2 text-[var(--color-text-secondary)] hover:text-[var(--color-accent)] transition-colors duration-200"
            >
              <svg class="w-5 h-5 mr-2" fill="currentColor" viewBox="0 0 20 20">
                <path d="M6.29 18.251c7.547 0 11.675-6.253 11.675-11.675 0-.178 0-.355-.012-.53A8.348 8.348 0 0020 3.92a8.19 8.19 0 01-2.357.646 4.118 4.118 0 001.804-2.27 8.224 8.224 0 01-2.605.996 4.107 4.107 0 00-6.993 3.743 11.65 11.65 0 01-8.457-4.287 4.106 4.106 0 001.27 5.477A4.073 4.073 0 01.8 7.713v.052a4.105 4.105 0 003.292 4.022 4.095 4.095 0 01-1.853.07 4.108 4.108 0 003.834 2.85A8.233 8.233 0 010 16.407a11.616 11.616 0 006.29 1.84" />
              </svg>
              Share on Twitter
            </a>
            
            <a 
              href={`https://www.linkedin.com/sharing/share-offsite/?url=${encodeURIComponent('https://bryanconklin.com')}`}
              target="_blank"
              rel="noopener noreferrer"
              class="inline-flex items-center px-4 py-2 text-[var(--color-text-secondary)] hover:text-[var(--color-accent)] transition-colors duration-200"
            >
              <svg class="w-5 h-5 mr-2" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M16.338 16.338H13.67V12.16c0-.995-.017-2.277-1.387-2.277-1.39 0-1.601 1.086-1.601 2.207v4.248H8.014v-8.59h2.559v1.174h.037c.356-.675 1.227-1.387 2.526-1.387 2.703 0 3.203 1.778 3.203 4.092v4.711zM5.005 6.575a1.548 1.548 0 11-.003-3.096 1.548 1.548 0 01.003 3.096zm-1.337 9.763H6.34v-8.59H3.667v8.59zM17.668 1H2.328C1.595 1 1 1.581 1 2.298v15.403C1 18.418 1.595 19 2.328 19h15.34c.734 0 1.332-.582 1.332-1.299V2.298C19 1.581 18.402 1 17.668 1z" clip-rule="evenodd" />
              </svg>
              Share on LinkedIn
            </a>
          </div>
        </div>

        <!-- Event Photos -->
        <div class="mt-8">
          <h4 class="text-lg font-medium text-[var(--color-text-primary)] mb-4">Event Photos</h4>
          <div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-5 gap-4">
            {latestTalk.photos.map((photo, index) => (
              <a 
                href={photo} 
                target="_blank" 
                rel="noopener noreferrer"
                class="block rounded-lg overflow-hidden border border-[var(--color-border)] hover:border-[var(--color-accent)] transition-colors duration-200"
              >
                <img 
                  src={photo} 
                  alt={`Event photo ${index + 1}`} 
                  class="w-full h-32 object-cover"
                />
              </a>
            ))}
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Connect Section -->
  <section class="py-20 px-4 sm:px-6 lg:px-8">
    <div class="max-w-2xl mx-auto text-center">
      <h2 class="text-2xl font-semibold text-[var(--color-text-primary)] mb-6">
        Let's Connect
      </h2>
      <p class="text-[var(--color-text-secondary)] mb-8">
        Follow me for insights on AI, multi-agent systems, and the future of intelligent computing.
      </p>
      
      <div class="flex justify-center space-x-6">
        <a 
          href="https://linkedin.com/in/bryanconklin" 
          class="text-[var(--color-text-secondary)] hover:text-[var(--color-accent)] transition-colors duration-200"
          target="_blank"
          rel="noopener noreferrer"
        >
          <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M16.338 16.338H13.67V12.16c0-.995-.017-2.277-1.387-2.277-1.39 0-1.601 1.086-1.601 2.207v4.248H8.014v-8.59h2.559v1.174h.037c.356-.675 1.227-1.387 2.526-1.387 2.703 0 3.203 1.778 3.203 4.092v4.711zM5.005 6.575a1.548 1.548 0 11-.003-3.096 1.548 1.548 0 01.003 3.096zm-1.337 9.763H6.34v-8.59H3.667v8.59zM17.668 1H2.328C1.595 1 1 1.581 1 2.298v15.403C1 18.418 1.595 19 2.328 19h15.34c.734 0 1.332-.582 1.332-1.299V2.298C19 1.581 18.402 1 17.668 1z" clip-rule="evenodd" />
          </svg>
          <span class="sr-only">LinkedIn</span>
        </a>
        
        <a 
          href="https://github.com/bryanconklin" 
          class="text-[var(--color-text-secondary)] hover:text-[var(--color-accent)] transition-colors duration-200"
          target="_blank"
          rel="noopener noreferrer"
        >
          <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M10 0C4.477 0 0 4.484 0 10.017c0 4.425 2.865 8.18 6.839 9.504.5.092.682-.217.682-.483 0-.237-.008-.868-.013-1.703-2.782.605-3.369-1.343-3.369-1.343-.454-1.158-1.11-1.466-1.11-1.466-.908-.62.069-.608.069-.608 1.003.07 1.531 1.032 1.531 1.032.892 1.53 2.341 1.088 2.91.832.092-.647.35-1.088.636-1.338-2.22-.253-4.555-1.113-4.555-4.951 0-1.093.39-1.988 1.029-2.688-.103-.253-.446-1.272.098-2.65 0 0 .84-.27 2.75 1.026A9.564 9.564 0 0110 4.844c.85.004 1.705.115 2.504.337 1.909-1.296 2.747-1.027 2.747-1.027.546 1.379.203 2.398.1 2.651.64.7 1.028 1.595 1.028 2.688 0 3.848-2.339 4.695-4.566 4.942.359.31.678.921.678 1.856 0 1.338-.012 2.419-.012 2.747 0 .268.18.58.688.482A10.019 10.019 0 0020 10.017C20 4.484 15.522 0 10 0z" clip-rule="evenodd" />
          </svg>
          <span class="sr-only">GitHub</span>
        </a>
        
        <a 
          href="https://twitter.com/bryanconklin" 
          class="text-[var(--color-text-secondary)] hover:text-[var(--color-accent)] transition-colors duration-200"
          target="_blank"
          rel="noopener noreferrer"
        >
          <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 20 20">
            <path d="M6.29 18.251c7.547 0 11.675-6.253 11.675-11.675 0-.178 0-.355-.012-.53A8.348 8.348 0 0020 3.92a8.19 8.19 0 01-2.357.646 4.118 4.118 0 001.804-2.27 8.224 8.224 0 01-2.605.996 4.107 4.107 0 00-6.993 3.743 11.65 11.65 0 01-8.457-4.287 4.106 4.106 0 001.27 5.477A4.073 4.073 0 01.8 7.713v.052a4.105 4.105 0 003.292 4.022 4.095 4.095 0 01-1.853.07 4.108 4.108 0 003.834 2.85A8.233 8.233 0 010 16.407a11.616 11.616 0 006.29 1.84" />
          </svg>
          <span class="sr-only">Twitter</span>
        </a>
      </div>
    </div>
  </section>
</MainLayout>